URxvt.color7:       #f1f1f1
URxvt.color15:      #ffffff

! Configure the font and some other things for urxvt.
URxvt.font:         xft:Envy Code R-10
URxvt.urgentOnBell: true
URxvt.scrollBar:    false
URxvt.saveLines:    16384
URxvt.cursorBlink:  true
