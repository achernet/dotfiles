\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{bcat}[2011/05/31 Jonathan Rascher's preamble]

% Load math packages.
\RequirePackage{mathtools,thmtools}

% Load graphics packages.
\RequirePackage[dvipsnames,usenames]{color}
\RequirePackage{tikz}
\usetikzlibrary{arrows,backgrounds,decorations.markings}

% Load miscellaneous packages.
\RequirePackage{etoolbox,fixltx2e,multicol}

% Configure PDF links and metadata.
\RequirePackage[pdfusetitle]{hyperref}
\hypersetup{
  colorlinks,
  linkcolor=RawSienna,
  citecolor=RawSienna,
  urlcolor=RawSienna,
  pdfpagemode=UseNone,
  pdfstartview=FitH,
  pdfprintscaling=None}

% Load packages that must come after hyperref.
\RequirePackage[capitalize]{cleveref}
\RequirePackage{ellipsis}

% Set up theorem-like environments. (Must happen after cleveref is included.)
\declaretheoremstyle[notefont=,notebraces={}{}]{exer*}

\declaretheorem[
  numbered=no,
  name=Exercise,
  refname={Exercise,Exercises},
  style=exer*]{exer*}
\declaretheorem[
  numbered=no,
  name=\!\!,
  style=exer*]{exer**}

\declaretheorem[
  name=Theorem,
  refname={Theorem,Theorems}]{thm}
\declaretheorem[
  sibling=thm,
  name=Proposition,
  refname={Proposition,Propositions}]{prop}
\declaretheorem[
  sibling=thm,
  name=Lemma,
  refname={lemma,lemmas}]{lem}
\declaretheorem[
  sibling=thm,
  name=Corollary,
  refname={Corollary,Corollaries}]{cor}

\declaretheorem[
  sibling=thm,
  name=Definition,
  refname={Definition,Definitions},
  style=definition]{defn}
\declaretheorem[
  sibling=thm,
  name=Example,
  refname={Example,Examples},
  style=definition]{xmp}
\declaretheorem[
  sibling=thm,
  name=Exercise,
  refname={Exercise,Exercises},
  style=definition]{exer}

% Prefer variant forms of epsilon and phi.
\let\bcat@oldepsilon\epsilon
\let\bcat@oldphi\phi

\let\epsilon\varepsilon
\let\phi\varphi

\let\varepsilon\bcat@oldepsilon
\let\varphi\bcat@oldphi

% Patch up `\left` and `\right` to fix spacing.
% Source: <http://tex.stackexchange.com/questions/2607/#2610>.
\let\bcat@oldleft\left
\let\bcat@oldright\right

\renewcommand*\left{\mathopen{}\mathclose\bgroup\bcat@oldleft}
\renewcommand*\right{\aftergroup\egroup\bcat@oldright}

% Define useful shorthand commands.
\newcommand*\C{\mathbb C}
\newcommand*\N{\mathbb N}
\newcommand*\Q{\mathbb Q}
\newcommand*\R{\mathbb R}
\newcommand*\Z{\mathbb Z}
\newcommand*\bb[1]{\mathbb{#1}}
\newcommand*\mc[1]{\mathcal{#1}}
\newcommand*\mf[1]{\mathfrak{#1}}
\newcommand*\ms[1]{\mathscr{#1}}
\newcommand*\vr[1]{\mathbf{#1}}

% Define commands for custom math functions.
\DeclareMathOperator\Comp{Comp}
\DeclareMathOperator\Tr{Tr}
\DeclareMathOperator\adj{adj}
\DeclareMathOperator\nullity{nullity}
\DeclareMathOperator\range{range}
\DeclareMathOperator\rank{rank}
\DeclareMathOperator\spans{span}

% Define commands for custom math delimiter structures.
\DeclarePairedDelimiter\abs{\lvert}{\rvert}
\DeclarePairedDelimiter\norm{\lVert}{\rVert}

% Define commands for typographical tweaks.
\newcommand*\nbds[1][-]{\nobreakdashes#1\hspace{0pt}}
\newcommand*\nextline{\leavevmode\@afterheading}

% Extend amsmath to support augmented matrices.
% Source: <http://texblog.net/latex-archive/maths/amsmath-matrix/>.
\renewcommand*\env@matrix[1][*\c@MaxMatrixCols c]{%
  \hskip -\arraycolsep
  \let\@ifnextchar\new@ifnextchar
  \array{#1}}

% Deprecated commands. Do not use these in new files.
\newcommand\autorefwrap[3]{\hyperref[#1]{#2\autoref*{#1}#3}}
